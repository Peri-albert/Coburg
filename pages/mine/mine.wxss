/*头像*/

.headsculpture {
  text-align: center;
  width: 100%;
  height: 200rpx;
  padding: 100rpx 0;
  background: #fff;
}

.headsculpture image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

/*个人信息*/

.information {
  height: 99rpx;
  border-bottom: 5rpx solid #ccc;
  border-top: 5rpx solid #ccc;
  margin: 0 15rpx 0 30rpx;
}

.information image {
  width: 45rpx;
  height: 45rpx;
  padding: 27rpx 30rpx;
  float: left;
}

.information text {
  padding: 27rpx 0;
  float: left;
}

.information > image:nth-child(3) {
  width: 26rpx;
  height: 45rpx;
  float: right;
  padding: 12px 0;
}

